{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SemanticKernel": {
    "DefaultProvider": "OpenRouter",
    "DefaultModel": "google/gemini-2.5-flash-lite-preview-09-2025",
    "EnabledPlugins": ["Weather", "DateTime"],
    "PluginCriticality": {
      "Critical": [],
      "NonCritical": ["Weather", "DateTime"]
    },
    "PromptTemplates": {
      "Summarize": "Summarize the following conversation:\n{{$history}}\n\nSummary:",
      "ExtractEntities": "Extract key entities from the following text:\n{{$input}}\n\nEntities:",
      "RewriteTone": "Rewrite the following message in a {{$tone}} tone:\n{{$message}}"
    }
  }
}
